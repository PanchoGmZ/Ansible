[global]
workgroup = WORKGROUP
security = user
map to guest = Bad User
server string = Samba Server %h
disable netbios = yes
smb ports = 445
log file = /var/log/samba/log.%m
max log size = 1000
[{{ samba_share_name }}]
path = {{ samba_share_path }}
browseable = yes
writable = yes
read only = no
valid users = @{{ samba_group }}
force group = {{ samba_group }}
create mask = {{ samba_file_mask }}
directory mask = {{ samba_dir_mask }}
guest ok = no
